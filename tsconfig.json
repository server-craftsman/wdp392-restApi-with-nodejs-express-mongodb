{
  "compilerOptions": {
    "typeRoots": [
      "./src/types",
    ],
    "target": "ES6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
    // "baseUrl": "./src",
    // "paths": {
    //     "modules/*": ["modules/*"],
    //     "core/*": ["core/*"]
    // }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    "src/modules/auth/swagger/auth.swagger.js"
, "src/modules/result/swagger/results.swagger.js"  ],
  "exclude": [
    "node_modules"
  ]
}